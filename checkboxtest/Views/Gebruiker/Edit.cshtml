@model checkboxtest.Models.Gebruiker

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Gebruiker</legend>

        @Html.HiddenFor(model => model.ID)

        <div class="editor-label">
            @Html.LabelFor(model => model.Voornaam)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Voornaam)
            @Html.ValidationMessageFor(model => model.Voornaam)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Achternaam)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Achternaam)
            @Html.ValidationMessageFor(model => model.Achternaam)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Email)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TelNummer)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TelNummer)
            @Html.ValidationMessageFor(model => model.TelNummer)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.GsmNummer)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.GsmNummer)
            @Html.ValidationMessageFor(model => model.GsmNummer)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Paswoord)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Paswoord)
            @Html.ValidationMessageFor(model => model.Paswoord)
        </div>
    </fieldset>
    
    <fieldset>
        <legend>Gebruiker privileges</legend>
        <div class="editor-field">
            <table>
                <tr>
                    @{
                        int cnt = 0;
                        List<checkboxtest.ViewModels.AssignedRoles> roles = ViewBag.Roles;

                        foreach (var rol in roles) {
                            if (cnt++ % 3 == 0) {
                                @:  </tr> <tr> 
                            }
                            @: <td> 
                                <input type="checkbox" 
                                       name="selectedRoles" 
                                       value="@rol.RoleID" 
                                       @(Html.Raw(rol.Assigned ? "checked=\"checked\"" : "")) /> 
                                 @:  @rol.Naam
                            @:</td>
                        }
                        @: </tr>
                    }
            </table>
        </div>
    </fieldset>
    
    <p>
        <input type="submit" value="Save" />
    </p>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
