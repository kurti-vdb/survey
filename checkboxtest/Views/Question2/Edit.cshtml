@model checkboxtest.Models.Question

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Question</legend>

        @Html.HiddenFor(model => model.ID)

        <div class="editor-label">
            @Html.LabelFor(model => model.Vraagstelling)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Vraagstelling)
            @Html.ValidationMessageFor(model => model.Vraagstelling)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Sequentie)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Sequentie)
            @Html.ValidationMessageFor(model => model.Sequentie)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.QuestionTypeID, "QuestionType")
        </div>
        <div class="editor-field">
            @Html.DropDownList("QuestionTypeID", String.Empty)
            @Html.ValidationMessageFor(model => model.QuestionTypeID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.AnswerID, "Answer")
        </div>
        <div class="editor-field">
            @Html.DropDownList("AnswerID", String.Empty)
            @Html.ValidationMessageFor(model => model.AnswerID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.GroepID, "Groep")
        </div>
        <div class="editor-field">
            @Html.DropDownList("GroepID", String.Empty)
            @Html.ValidationMessageFor(model => model.GroepID)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
